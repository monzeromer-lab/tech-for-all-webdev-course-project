<!-- Posts -->
<div class="container">
  <!-- Last Post -->
  
  <h1 class="titleOne">Last post:</h1>
<hr>
<% if (posts.length >= 1) { %>
   <a class="topost" href="/post?id=<%= posts[posts.length-1].id %>"  rel="noopener noreferrer">
  <div class="lastpost">
  <div class="row">
  <div class="col-sm-8 post">
  <p class="posttitle"><%= posts[posts.length-1].title %> <span class="postdate"><%= posts[posts.length-1].body %></span></p>
  
  <p class="postbody"><%= posts[posts.length-1].createdAt %></p>
</div>
<div class="col-sm-4 image">
  <img class="photo" src="./<%= posts[posts.length-1].image %>" alt="image" width="330" height="243">
</div>
</div>
</div>
</a>
<% } else { %>
  No Posts Yet
 <% } %>
<!-- End Last Post -->

<!-- All Posts -->
<h1 class="titleOne">All Posts:</h1>
<hr>
<% if (posts.length >= 1) { %>
<% for( let index = 0; index < posts.length; index++ ) { %>
   <a class="topost" href="/post?id=<%= posts[index].id %>"  rel="noopener noreferrer">
  <div class="lastpost">
  <div class="row">
  <div class="col-sm-8 post">
  <p class="posttitle"><%= posts[index].title %> <span class="postdate"><%= posts[index].body %></span></p>
  
  <p class="postbody"><%= posts[index].createdAt %></p>
</div>
<div class="col-sm-4 image">
  <img class="photo" src="<%= posts[index].image %>" alt="image" width="330" height="243">
</div>
</div>
</div>
</a>
<% } %>
<% } else { %>
  No Posts Yet
 <% } %>
<!-- End All Posts -->
